{
  "name": "api",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Maxwell Brown <maxwellbrown1990@gmail.com>",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "dotenv -e .env.development -- ts-node-dev --no-notify --respawn --transpileOnly ./index.ts",
    "docker:up": "cd prisma && docker-compose up -d",
    "docker:down": "cd prisma && docker-compose down",
    "docker:start": "cd prisma && docker-compose start",
    "docker:stop": "cd prisma && docker-compose stop",
    "prisma:deploy:dev": "cd prisma && prisma deploy -e ../.env.development",
    "prisma:deploy:prod": "cd prisma && prisma deploy -e ../.env.production --no-seed",
    "prisma:playground:dev": "cd prisma && prisma playground -e ../.env.development",
    "prisma:playground:prod": "cd prisma && prisma playground -e ../.env.production",
    "prisma:reset:dev": "cd prisma && prisma reset -e ../.env.development",
    "prisma:seed:dev": "cd prisma && prisma seed -e ../.env.development",
    "nexus": "npx nexus-prisma-generate --client ./generated/prisma-client --output ./generated/nexus-prisma",
    "tsc": "tsc",
    "now-build": "yarn nexus"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "email-templates": "^5.0.4",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "faker": "^4.1.0",
    "graphql": "^14.1.1",
    "graphql-shield": "^5.3.1",
    "helmet": "^3.16.0",
    "hpp": "^0.2.2",
    "ioredis": "^4.6.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.capitalize": "^4.2.1",
    "lodash.times": "^4.3.2",
    "nexus": "^0.11.5",
    "nexus-prisma": "^0.3.5",
    "nodemailer": "^5.1.1",
    "nodemailer-sendgrid": "^1.0.3",
    "prisma-client-lib": "^1.28.5",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/email-templates": "^3.5.1",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.0.7",
    "@types/helmet": "^0.0.43",
    "@types/hpp": "^0.2.1",
    "@types/ioredis": "^4.0.10",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash.capitalize": "^4.2.6",
    "@types/lodash.times": "^4.3.6",
    "@types/node": "^11.11.4",
    "@types/nodemailer": "^4.6.6",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "dotenv-cli": "^2.0.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.4000"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{js,ts,graphql}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
